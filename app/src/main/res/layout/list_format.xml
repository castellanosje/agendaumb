<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#99FFFFFF"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingTop="10dip"
    android:paddingRight="20dip"
    android:paddingBottom="10dip">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:srcCompat="@drawable/calico" />

    </LinearLayout>

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/eventoAsunto"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_toStartOf="@+id/borrar"
        android:layout_toLeftOf="@+id/borrar"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="titulo"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/actividad"
        android:layout_width="225dp"
        android:layout_height="18dp"
        android:layout_below="@id/eventoAsunto"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dip"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/borrar"
        android:layout_toLeftOf="@+id/borrar"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="descripcion"
        android:textColor="#343434"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="227dp"
        android:layout_height="18dp"
        android:layout_below="@id/actividad"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dip"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@+id/borrar"
        android:layout_toLeftOf="@+id/borrar"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="fecha"
        android:textColor="#666"
        android:textSize="10dip" />


    <!-- Rightend Arrow -->
    <ImageView
        android:id="@+id/borrar"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/trash" />

</RelativeLayout>